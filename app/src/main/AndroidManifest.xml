<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.abhirajsharma.urbanspeed">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".write_review"></activity>
        <activity android:name=".review" />
        <activity android:name=".ShopActivity" />
        <activity
            android:name=".SplashScreen"
            android:noHistory="true"
            android:theme="@style/SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PhoneLogin"
            android:parentActivityName=".LoginActivity"
            android:theme="@style/AppThemeNoBar"
            android:windowSoftInputMode="adjustPan|adjustResize" />
        <activity
            android:name=".LoginActivity"
            android:theme="@style/AppThemeNoBar" />
        <activity android:name=".MainActivity" />
        <activity android:name=".Products" />
        <activity android:name=".MyCart" />
        <activity android:name=".NewAddress" />
        <activity android:name=".MyAddress" />
        <activity android:name=".BuyNow" />
        <activity android:name=".ProductDetails" />
        <activity android:name=".myOrder" />
        <activity android:name=".OrderDetails" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

</manifest>