<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/address_recycler_item_LL"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:alpha="0.8"
    android:background="@drawable/corner_round_image"
    android:elevation="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/address_recycler_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="Aditya kumar"
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/address_recycler_address_type"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="#D8D6D6"
            android:paddingHorizontal="4dp"
            android:paddingVertical="2dp"
            android:text="HOME"
            android:textColor="#444444"
            android:textSize="11dp" />


    </LinearLayout>

    <TextView
        android:id="@+id/address_recycler_address_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="12dp"
        android:paddingEnd="55dp"
        android:text="Aditya kumar Adity kumarAditya kumarAditya kumarAditya kumarAditya kumarAditya kumarAditya kumarAditya kumarAditya kumarAditya kumarAditya kumar"
        android:textColor="#292929" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/address_recycler_phone_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_weight="1"
            android:paddingStart="12dp"
            android:text="9546796020"
            android:textColor="#292929" />

        <ImageButton
            android:id="@+id/address_recycler_edit_btn"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:padding="4dp"
            android:src="@drawable/ic_edit_black_24dp"
            android:tint="#464545" />

        <ImageButton
            android:id="@+id/address_recycler_delete_btn"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="12dp"
            android:background="#fff"
            android:padding="4dp"

            android:src="@drawable/ic_delete_black_24dp"
            android:tint="#464545" />


    </LinearLayout>


</LinearLayout>