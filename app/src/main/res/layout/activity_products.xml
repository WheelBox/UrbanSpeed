<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Products">


    <androidx.cardview.widget.CardView

        android:id="@+id/cardView2"
        android:backgroundTint="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >


        <TextView
            android:id="@+id/shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="Shop Name"
            android:textColor="#fff"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/shop_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="#fff"

            android:layout_marginTop="40dp"
            android:text="description of shop"
            android:textSize="16dp" />
        <TextView
            android:id="@+id/shop_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C-312,Rudra Hostel"
            android:textColor="#fff"

            android:layout_marginTop="60dp"
            android:layout_marginStart="8dp"

            />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/border_backgroud"
            android:orientation="vertical">

            <TextView
                android:id="@+id/restaurantMenuRating"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#04A504"
                android:text="3.5"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="4dp"
                android:text="Review"
                android:textColor="#FFF"
                android:textSize="14dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="85dp"
            >
            <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:orientation="vertical"
                android:background="@color/colorPrimaryDark"
                android:paddingHorizontal="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/linearLayout5"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"

                    android:layout_marginTop="12dp"
                    android:background="@drawable/purpleblue_shade"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                </LinearLayout>

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/gnvhh"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginStart="55dp"
                    android:src="@color/colorPrimaryDark"
                    app:civ_border_color="#00000000"
                    app:civ_border_width="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/gniygvhh"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginTop="40dp"
                    android:src="@color/colorPrimaryDark"
                    app:civ_border_color="#FF000000"
                    app:civ_border_width="0dp"
                    app:layout_constraintEnd_toEndOf="@+id/gnvhh"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/gnvhh"
                    app:layout_constraintTop_toBottomOf="@+id/gnvhh" />

                <View
                    android:id="@+id/divider"
                    android:layout_width="1dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="8dp"
                    android:background="?android:attr/listDivider"
                    app:layout_constraintBottom_toTopOf="@+id/gniygvhh"
                    app:layout_constraintEnd_toEndOf="@+id/gnvhh"
                    app:layout_constraintStart_toStartOf="@+id/gnvhh"
                    app:layout_constraintTop_toBottomOf="@+id/gnvhh"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/restaurantMenuStartOfferAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="8dp"
                    android:text="20%"
                    android:textColor="#fff"
                    android:textSize="22dp"
                    app:layout_constraintEnd_toStartOf="@+id/divider"
                    app:layout_constraintHorizontal_bias="0.857"
                    app:layout_constraintStart_toStartOf="@+id/linearLayout5"
                    app:layout_constraintTop_toTopOf="@+id/linearLayout5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="36dp"
                    android:layout_marginEnd="5dp"
                    android:text="OFF"
                    android:textColor="#fff"
                    android:textSize="12dp"
                    app:layout_constraintEnd_toStartOf="@+id/divider"
                    app:layout_constraintHorizontal_bias="0.363"
                    app:layout_constraintStart_toStartOf="@+id/linearLayout5"
                    app:layout_constraintTop_toTopOf="@+id/linearLayout5" />

                <TextView
                    android:id="@+id/restaurantMenuStartOfferOn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="On each order above"
                    android:textColor="#fff"
                    android:textSize="18dp"
                    app:layout_constraintBottom_toBottomOf="@+id/linearLayout5"
                    app:layout_constraintStart_toEndOf="@+id/divider"
                    app:layout_constraintTop_toTopOf="@+id/linearLayout5"
                    app:layout_constraintVertical_bias="0.322" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text=" limited time offer* "
                    android:textColor="#fff"
                    android:textSize="12dp"
                    app:layout_constraintStart_toEndOf="@+id/divider"
                    app:layout_constraintTop_toBottomOf="@+id/restaurantMenuStartOfferOn" />


                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/restaurantMenuStartOfferRedeemLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/white_border"
                    app:layout_constraintBottom_toBottomOf="@+id/linearLayout5"
                    app:layout_constraintEnd_toEndOf="@+id/linearLayout5"
                    app:layout_constraintTop_toTopOf="@+id/linearLayout5">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="2dp"

                        android:text="Redeem"
                        android:textAlignment="center"
                        android:textColor="#FF0000"
                        android:textSize="15dp" />


                </LinearLayout>

                <TextView
                    android:id="@+id/restaurantMenuStartOfferAboveAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="5dp"
                    android:text="₹3000"
                    android:textColor="#fff"
                    android:textSize="28dp"
                    app:layout_constraintBottom_toBottomOf="@+id/restaurantMenuStartOfferOn"
                    app:layout_constraintStart_toEndOf="@+id/restaurantMenuStartOfferOn"
                    app:layout_constraintTop_toTopOf="@+id/restaurantMenuStartOfferOn"
                    app:layout_constraintVertical_bias="0.333" />


            </androidx.constraintlayout.widget.ConstraintLayout>



        </LinearLayout>

        <TextView

            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="170dp"
            android:layout_marginEnd="12dp"
            android:background="#fff"
            android:text=""
            android:textSize="1dp" />




        <LinearLayout
            android:visibility="gone"
            android:id="@+id/search_LL"
            android:layout_marginBottom="20dp"
            android:elevation="5dp"
            android:background="@drawable/border_black_stroke"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="185dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                app:srcCompat="@drawable/ic_search_white_24dp"
                tools:ignore="VectorDrawableCompat"
                app:tint="@color/colorPrimaryDark" />

            <TextView
                android:visibility="visible"
                android:layout_marginLeft="8dp"
                android:id="@+id/searchMenuStartEditTxt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="search in shop..."
                android:textSize="16dp"
                android:background="#00A5A1A1"
                android:textColor="#252525" />


        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/grocery_product_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView2" />




</androidx.constraintlayout.widget.ConstraintLayout>