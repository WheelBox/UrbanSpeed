<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".storeDetails">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/store_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/store_default"
        app:civ_border_color="#FF000000"
        app:civ_border_width="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/addShopImage"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:background="@drawable/orange_dot"
        android:gravity="center_horizontal"
        android:text="+"
        android:textColor="#FFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/store_image"
        app:layout_constraintEnd_toEndOf="@+id/store_image" />


    <LinearLayout
        android:id="@+id/store_name_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/store_image">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="name :-"
            android:textColor="#000"
            android:textSize="18dp" />
        <EditText
            android:id="@+id/add_name_et"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/border_black_stroke"
            android:ems="10"
            android:hint="Name"
            android:inputType="textPersonName"
            android:paddingStart="8dp"
            android:textColor="#000"

            android:theme="@style/Edit_Text"
            app:layout_constraintVertical_bias="0.0" />




    </LinearLayout>

    <LinearLayout
        android:id="@+id/store_description_ll"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/store_name_ll">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Description :-"
            android:textColor="#000"
            android:textSize="18dp" />
        <EditText
            android:id="@+id/add_description_et"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/border_black_stroke"
            android:ems="10"
            android:hint="Description"
            android:inputType="textPersonName"
            android:paddingStart="8dp"
            android:textColor="#000"

            android:theme="@style/Edit_Text"
            app:layout_constraintVertical_bias="0.0" />




    </LinearLayout>
    <LinearLayout
        android:id="@+id/store_delivery_charge_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/store_description_ll">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Delivery Charges :-"
            android:textColor="#000"
            android:textSize="18dp" />
        <EditText
            android:id="@+id/add_deliveryCharge_name_et"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/border_black_stroke"
            android:ems="10"
            android:hint="Name"
            android:inputType="number"
            android:paddingStart="8dp"
            android:textColor="#000"

            android:theme="@style/Edit_Text"
            app:layout_constraintVertical_bias="0.0" />

    </LinearLayout>

    <Button
        android:id="@+id/add_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#DF4444"
        android:text="add address"
        android:textColor="#FFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/store_delivery_charge_ll" />

    <TextView
        android:id="@+id/txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:text="Address of store"
        app:layout_constraintEnd_toStartOf="@+id/add_location"
        app:layout_constraintHorizontal_bias="0.064"
        android:textColor="#000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/store_delivery_charge_ll" />

    <Button
        android:id="@+id/next_continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        android:text="Continue"
        android:backgroundTint="#252525"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView

        android:id="@+id/address_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="To add address,click on add Address"
        app:layout_constraintEnd_toStartOf="@+id/add_location"
        app:layout_constraintStart_toStartOf="@+id/txt"
        app:layout_constraintTop_toBottomOf="@+id/txt" />


</androidx.constraintlayout.widget.ConstraintLayout>